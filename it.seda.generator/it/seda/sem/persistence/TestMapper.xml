<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="it.seda.sem.persistence.TestMapper">

<resultMap id="test" type="Test">
   <id property="id"   column="ID" />    
   <result property="name" column="NAME" />    
   <result property="cognome" column="COGNOME" />    
   <result property="registrazione" column="REGISTRAZIONE" />    
</resultMap>
	
<insert id="insertTest" parameterType="Test">
INSERT INTO Test
   (
    name, cognome, registrazione
   )VALUES	
   (
   #{name} , #{cognome} , #{registrazione} 
    )
</insert>
	
<update id="updateTest" parameterType="Test">
UPDATE Test
   #{name} , #{cognome} , #{registrazione} 
   WHERE id= #{id} 
</update>	

<delete id="deleteTest" parameterType="java.math.BigInteger">
DELETE FROM Test
WHERE id= #{id}   
</delete>	

<select id="getTest" parameterType="java.math.BigInteger" resultMap="test">
SELECT name, cognome, registrazione, id 
FROM Test
WHERE id= #{id}   
</select>	


<select id="listTestCount"  resultType="int">
SELECT COUNT(name)
FROM Test
</select>	

<select id="listTest"  resultMap="test">
SELECT  name, cognome, registrazione, id
FROM Test
ORDER BY id
</select>
	
</mapper>